---
import ComponentRegistryModal from "../components/ComponentRegistryModal.astro";
import { registryData } from "../mock/registry/data";
import "../example-stylesheets/StorageFileBrowser.css";
---

<html lang="en" data-theme="dark">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Component Registry UI</title>
		<style>
			:root {
				font-family:
					system-ui,
					-apple-system,
					BlinkMacSystemFont,
					"Segoe UI",
					Roboto,
					sans-serif;
			}
			body {
				background-color: var(--storage-browser-bg-base);
				color: var(--storage-browser-text-normal);
				padding: 2rem;
				margin: 0;
			}
			h1 {
				margin-bottom: 2rem;
			}

			.registry-trigger {
				background-color: #3b82f6;
				color: #ffffff;
				padding: 0.5rem 1rem;
				border: none;
				border-radius: 0.375rem;
				cursor: pointer;
			}

			.registry-no-output {
				background-color: #fbbf24;
				color: #000000;
				padding: 0.5rem 1rem;
				border: none;
				border-radius: 0.375rem;
				cursor: pointer;
			}

			.registry-custom {
				background-color: #10b981;
				color: #ffffff;
				padding: 0.5rem 1rem;
				border: none;
				border-radius: 0.375rem;
				cursor: pointer;
			}

			pre {
				background-color: #1e1e1e;
				color: #d4d4d4;
				padding: 1rem;
				border-radius: 0.375rem;
				overflow-x: auto;
			}
		</style>
	</head>
	<body>
		<h1>Component Registry Browser</h1>
		<p>
			Click the button below to browse the component registry and generate
			HTML strings.
		</p>
		<ComponentRegistryModal registryData={registryData}>
			<button class="registry-trigger" type="button">
				Open Component Registry (Basic)
			</button>
		</ComponentRegistryModal>
		<br /><br />
		<ComponentRegistryModal registryData={registryData} noOutput>
			<button class="registry-no-output" type="button">
				Open Component Registry (No Output)
			</button>
		</ComponentRegistryModal>
		<br /><br />
		<ComponentRegistryModal
			registryData={registryData}
			triggerId="custom-trigger-button"
		/>
		<div>
			<button
				id="custom-trigger-button"
				class="registry-custom"
				type="button"
			>
				Open Component Registry (Custom Trigger)
			</button>
		</div>

		<hr />
		<p>Current testing data:</p>
		<pre>{JSON.stringify(registryData, null, 2)}</pre>
	</body>
</html>
